{
  "name": "step-recorder-server",
  "version": "1.0.0",
  "description": "MCP server that records user steps and writes them in English",
  "type": "module",
  "bin": {
    "step-recorder": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc --project examples/tsconfig.json",
    "agent:browser": "npm run build:examples && node examples/build/browser-agent.js",
    "agent:task": "npm run build:examples && node examples/build/task-agent.js",
    "example:quick": "node examples/quick-start.js",
    "example:integration": "npm run build:examples && node examples/build/integration-example.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "step-recorder"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.2"
  },
  "files": [
    "build"
  ]
}
